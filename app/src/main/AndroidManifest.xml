<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.worldsnas.samplecompose">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.SampleCompose">
		<activity
			android:name=".MainActivity"
			android:configChanges="orientation|layoutDirection|screenSize|screenLayout|fontScale|locale|keyboardHidden|keyboard|colorMode|uiMode"
			android:exported="true"
			android:label="Compose Activity"
			android:theme="@style/Theme.SampleCompose.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ViewActivity"
			android:exported="true"
			android:configChanges="orientation|layoutDirection|screenSize|screenLayout|fontScale|locale|keyboardHidden|keyboard|colorMode|uiMode"
			android:label="ViewActivity"
			android:theme="@style/Theme.SampleCompose.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>